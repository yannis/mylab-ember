<div class="row">
  <div class="col-sm-12 col-md-4 col-lg-4">
    <h1>
      Categories
    </h1>
    <ul class="list-group">
      {{#each category in arrangedContent}}
        <li class="list-group-item">
          {{link-to category.name 'categories.show' category}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-12 col-md-8 col-lg-8">
    {{outlet}}
  </div>
</div>
