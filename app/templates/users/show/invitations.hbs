<div class="row">
  <div class="col-sm-12 col-md-4 col-lg-2">
    <h1>
      Invitations
    </h1>
    {{#if model}}
      <ul class="list-group">
        {{#each invitation in model}}
          <li class="list-group-item">
            {{invitation.inviter.name}} invited you to group '{{invitation.group.name}}'
            accept            decline
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>
        You have no invitations yet.
      </p>
    {{/if}}
  </div>
  <div class="col-sm-12 col-md-8 col-lg-10">
    {{outlet}}
  </div>
</div>
