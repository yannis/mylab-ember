<div class="col-md-12">
  <div class="well">
    {{#if model.readable}}readable{{/if}}
    {{#if model.updatable}}updatable{{/if}}
    {{#if model.destroyable}}destroyable{{/if}}
  </div>
  <h3 class="">
    Version '{{model.name}}'
    <small>
      Created {{formatted-date model.createdAt 'YYYY-MM-DD'}}
      {{#if model.creator }}
        ({{link-to model.creator.name "users.show" model.creator}})
      {{/if}}
      â€¢ Updated {{formatted-date model.updatedAt 'YYYY-MM-DD'}}
      {{#if model.updater }}
        ({{link-to model.updater.name "users.show" model.updater}})
      {{/if}}
    </small>
    <span class="pull-right btn-group" role="group" aria-label="...">
      {{#link-to 'documents.show.versions.duplicate' model.id classNames='btn btn-success' title="Duplicate this version" data-toggle="tooltip" data-placement="top"}}
        <span class="glyphicon glyphicon-duplicate"></span>
      {{/link-to}}
      {{#link-to 'documents.show.versions.edit' model classNames='btn btn-primary' title="Edit this version" data-toggle="tooltip" data-placement="top"}}
        <span class="glyphicon glyphicon-edit"></span>
      {{/link-to}}
      <a href="#" {{action "delete" model}} class="btn btn-danger" title="Destroy this version" data-toggle="tooltip" data-placement="top">
        <span class="glyphicon glyphicon-trash"></span>
      </a>
      <a href="{{pdfUrlWithCredentials}}" class="btn btn-default" title="Get a PDF of this version" data-toggle="tooltip" data-placement="top" target="_blank">
        {{fa-icon "file-pdf-o"}}
      </a>
    </span>
  </h3>
</div>
<div class="col-md-12">
  <div class="document-html">
    {{markdown-to-html markdown=model.contentMd}}
  </div>
</div>
