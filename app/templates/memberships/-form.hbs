{{model.atributes}}
{{#if model.updatable}}
  <form {{action "save" on="submit"}} role='form' class="form-horizontal">
    <div class="form-group {{if model.errors.role 'has-error' 'has-no-error'}}">
      <label class="col-sm-2 control-label" for="form-membership-role">
        Role
      </label>
      <div class="col-sm-10">
        {{view "select" content=roles value=model.role classNames="form-control document-form-role" id="form-membership-role"}}
        {{form-errors model=model attribute='role'}}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <input type="submit" value="Save" class="btn btn-success">
        <button {{action "cancel"}} class="btn btn-default">cancel</button>
      </div>
    </div>
  </form>
{{else}}
  <div class="well ">
    Sorry, you can't update this membership.
  </div>
{{/if}}
