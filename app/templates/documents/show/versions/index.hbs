<div class="col-md-12">
  <h1>
    {{document.name}}
    <span class="pull-right btn-group" role="group" aria-label="...">
      {{#if model.updatable}}
        {{#link-to 'documents.edit' model classNames='btn btn-primary' title="Edit this document" data-toggle="tooltip" data-placement="top"}}
          <span class="glyphicon glyphicon-edit"></span>
        {{/link-to}}
      {{/if}}
      {{#if model.destroyable}}
        <a href="#" {{action "delete" model}} class="btn btn-danger" title="Destroy this document" data-toggle="tooltip" data-placement="top">
          <span class="glyphicon glyphicon-trash"></span>
        </a>
      {{/if}}
      {{#if model.readable}}
        <a href="{{pdfUrlWithCredentials}}" class="btn btn-default" title="Get a PDF of this document" data-toggle="tooltip" data-placement="top"  target="_blank">
          {{fa-icon "file-pdf-o"}}
        </a>
      {{/if}}
    </span>
  </h1>
  <div class='well'>
    No versions yet.
    {{link-to "Create one?" 'documents.show.versions.new' document}}
  </div>
</div>

