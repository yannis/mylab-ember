<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 col-lg-2 col-lg-offset-5">
    <h1 id="title">Sign in</h1>
    <form {{action 'authenticate' on='submit'}} role="form">
      {{!-- {{em-validation-errors validationErrors=validationErrors}} --}}
      <div class="form-group">
        {{input id='identification' type="email" class="form-control" placeholder='Email' value=identification autofocus='true'}}
      </div>
      <div class="form-group">
        {{input id='password' class="form-control" placeholder='Password' type='password' value=password}}
      </div>
      <div class="form-group">
        <button class="btn btn-default" type="submit">Login</button>
      </div>
      <p>
        {{#link-to "reset_password"}}Did you forget your password?{{/link-to}}
      </p>
    </form>
  </div>
</div>
