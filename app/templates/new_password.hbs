<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-3 col-lg-offset-4">
    <h1>{{pageTitle}}</h1>
    <form role="form" {{action "update_password" on="submit"}}>
      <div class="form-group {{if errors.password 'has-error' 'has-no-error'}}">
        {{#if errors.reset_password_token.length}}
          {{#each error in errors.reset_password_token}}
            <p class="text-danger">Reset password token {{error}}</p>
          {{/each}}
        {{/if}}
        {{input type="password" valueBinding='password' name='password' placeholder='Password' class="form-control" autofocus='true'}}
        {{#if errors.password.length}}
          {{#each error in errors.password}}
            <p class="text-danger">Password {{error}}</p>
          {{/each}}
        {{/if}}
      </div>
      <div class="form-group {{if errors.password_confirmation 'has-error' 'has-no-error'}}">
        {{input type="password" valueBinding='password_confirmation' name='password_confirmation' placeholder='Password confirmation' class="form-control"}}
        {{#if errors.password_confirmation.length}}
          {{#each error in errors.password_confirmation}}
            <p class="text-danger">Password  {{error}}</p>
          {{/each}}
        {{/if}}
      </div>
      <button class="btn btn-default" type="submit">Change password</button>
      or
      <a href='#' {{action "cancel"}}>Cancel</a>
    </form>
  </div>
</div>
